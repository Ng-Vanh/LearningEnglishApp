<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="576.0" prefWidth="960.0" style="-fx-background-color: linear-gradient(to right, #d4fc79 0%, #96e6a1 100%);" stylesheets="@HomePage.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dictionaryenvi.HomePage.HomePage">
    <children>
        <ImageView fitHeight="123.0" fitWidth="149.0" layoutX="583.0" layoutY="53.0" pickOnBounds="true" preserveRatio="true" style="-fx-rotate: 22deg;">
            <image>
                <Image url="@image/cute.gif" />
            </image>
        </ImageView>
        <HBox layoutX="361.0" layoutY="120.0" onMouseClicked="#goToDictionary" prefHeight="90.0" prefWidth="278.0" styleClass="dictionary-icon">
            <children>
                <ImageView fitHeight="90.0" fitWidth="126.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@image/dict.png" />
                    </image>
                </ImageView>
                <Button fx:id="goToDictionaryBtn" mnemonicParsing="false" onMouseClicked="#goToDictionary" prefHeight="90.0" prefWidth="167.0" style="-fx-background-color: rgb(33, 194, 76); -fx-background-radius: 20;" text="Dictionary" textFill="WHITE" textOverrun="WORD_ELLIPSIS">
                    <font>
                        <Font name="Segoe UI Black" size="24.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
            </children>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </HBox>
        <ImageView fx:id="logOutBtn" fitHeight="43.0" fitWidth="100.0" layoutX="42.0" layoutY="15.0" onMouseClicked="#clickLogOut" pickOnBounds="true" preserveRatio="true" styleClass="back-btn">
            <image>
                <Image url="@image/BackBtn.png" />
            </image>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </ImageView>
        <ImageView fitHeight="170.0" fitWidth="182.0" layoutX="423.0" layoutY="406.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@image/manWalk.gif" />
            </image>
        </ImageView>
        <VBox alignment="CENTER" layoutX="870.0" layoutY="14.0" prefHeight="187.0" prefWidth="76.0" spacing="15.0">
            <children>
                <ImageView fx:id="userInfoBtn" fitHeight="47.0" fitWidth="48.0" onMouseClicked="#clickShowUserInfo" pickOnBounds="true" preserveRatio="true" styleClass="userInfo-btn">
                    <image>
                        <Image url="@image/gamer.png" />
                    </image>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </ImageView>
                <ImageView fx:id="rankBtn" fitHeight="45.0" fitWidth="37.0" onMouseClicked="#showRanking" pickOnBounds="true" preserveRatio="true" styleClass="rank-btn">
                    <image>
                        <Image url="@image/award.png" />
                    </image>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </ImageView>
                <ImageView fitHeight="50.0" fitWidth="48.0" onMouseClicked="#learnWordOfDay" pickOnBounds="true" preserveRatio="true" styleClass="wordOfDay-btn">
                    <image>
                        <Image url="@image/new-product.png" />
                    </image>
                </ImageView>
            </children>
        </VBox>
        <Button fx:id="exercise" layoutX="142.0" layoutY="288.0" mnemonicParsing="false" onMouseClicked="#goToExercise" prefHeight="108.0" prefWidth="203.0" styleClass="exercise-btn" text="Exercise" textFill="WHITE">
            <font>
                <Font name="Segoe UI Bold Italic" size="24.0" />
            </font>
        </Button>
        <Button fx:id="topicWord" layoutX="665.0" layoutY="288.0" mnemonicParsing="false" onMouseClicked="#goToLearnWord" prefHeight="108.0" prefWidth="188.0" styleClass="study-btn" text="Study Word" textFill="#fffefe">
            <font>
                <Font name="Segoe UI Bold Italic" size="24.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
